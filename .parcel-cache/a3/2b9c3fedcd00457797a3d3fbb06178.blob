/* Responsiveness */

/* Tablet */

@media screen and (max-width: 1200px) {
	.nav .logo {
		float: none;
		width: 100%;
		justify-content: center;
	}
	.nav .nav_links {
		float: none;
		position: fixed;
		z-index: 9;
		left: 0;
		right: 0;
		top: 100px;
		bottom: 100%;
		flex-direction: column;
		justify-content: space-evenly;
		background-color: rgba(0,0,0,.8);
		overflow: hidden;
		box-sizing: border-box;
		transition: all .5s ease-in-out;
	}
	.nav .nav_links a {
		font-size: 20px;
	}
	.nav :checked ~ .nav_links {
		bottom: 0;
	}
	.nav .icon-burger {
		display: block;
	}
	hr.solid {
		display: none;
	}
	.stopwatch_buttons {
		margin-left: 1em;
		margin-right: 1em;
		text-align: center;
		padding: 9px 10px;
	}
	#stopwatchDisplay {
		font-size: 4em;
		padding-bottom: 0.2em;
		color: #363838;
		font-family: 'Lora', serif;
		font-weight: 700;
		text-align: center;
	}
	.music-player {
		margin-top: 2em;
		position: absolute;
		width: 90%;
		height: 60%;
		padding: 0.5em;
	}
	.column {
		width: 100%;
		text-align: center;
		align-items: center;
	}
}

/* Mobile */

@media screen and (max-width: 625px) {

#Pomodoro { 
	grid-area: content;
 	background-color: #ececec;
	text-align: center;
	padding: 2em;
	width: 100%;
	max-width: 100%;
	justify-content: space-around;
	font-weight: 600;
	}

	.divSquare {
		width: 100%; 
		height: 100%;
	}

	.task-list {
		width: 100%;
		min-width: 280px;
	}

	.task-body {
		width: 100%;
		min-width: 280px;
	}

	.column {
		width: 100%;
		text-align: center;
	}

	#completionTimeInput {
		width: 100%;
		margin-top: 10px;
		margin-left: 0px;
	}

	#quadrantInput {
		width: 80%;
		margin-top: 10px;
		margin-left: 0px;
	}

	.modal-tasks {
		height: 100%;
	}

}