@import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;500;700&display=swap');

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
	font-family: 'Lora', 'serif';
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto 1fr auto;
  gap: 3em 2em;
	grid-template-areas:
    "nav nav nav"
    "aside content content"
    "footer footer footer";
}

.column {
	float: left;
  width: 50%;
  padding: 10px;
}

.new {
	background: transparent;
	border: none;
	color: #363838;
	border-bottom: 2px solid currentColor;
	font-size: 500;
	outline: none;

	transition: border-bottom 0.2s ease-in;
}

.new:focus {
	border-bottom-width: 4px;
}

.new:focus::placeholder {
	opacity: 0.2;
}

.task-list {
	--spacer: 3rem;
	background-color: #DDDDDD;
	color: #363838;
	width: 100%;
	min-width: 550px;
}

.completed-task-list {
	--spacer: 3rem;
	background-color: #DDDDDD;
	color: #363838;
	width: 600px;
}

.task-body {
	padding: var(--spacer);
	position: relative;
	width: 100%;
}

#task-page-container::after {
	content: "";
	display: table;
	clear: both;
}

#covey-quadrants {
	margin-top: 10px;
}

#task-list {
	margin-top: 10px;
}

.task-count {
	margin: 0;
	font-size: 1rem;
}

[type = "checkbox"] {
	opacity: 100;
	position: relative;
	margin-right: 20px;
	list-style: none;
	transform: scale(1.7);
}

.quadrant-labels {
	font-size: 12px;
	font-weight: 500;
}

[type = "checkbox"]:checked + label {
	opacity: 0.5;
	font-family: 'Lora', 'serif';
	font-size: 20px;
}

[type = "checkbox"]:checked + label::after {
	transform: scaleX(1);
	transform-origin: left;
}

.task-buttons {
	display: flex;
	justify-content: space-evenly;
	position: relative;
	width: 100%;
	left: 0;
}

.task-buttons:hover {
	opacity: 70%;
	transition: all 0.1s ease-in 0s;
}

.task label {
	display: inline-flex;
	align-items: center;
	position: relative;
	font-size: 16px;
}

.quadrant-description {
	font-size: 18px;
	font-weight: 700;
}

.todo-list-item {
	transition: all 0.3s ease-out;
}

.todo-list-item-fall {
	transform: translateY(12rem) rotateZ(10deg);
	opacity: 0;
}

#emptyList {
	text-align: center;
	font-size: 18px;
}

button.delete {
	font-size: 16px;
	padding: 5px 10px;
	color: #363838;
	font-weight: 700;
	border: none;
	font-family: 'Lora', serif;
	text-align: center;
	background: none;
	cursor: pointer;
	position: relative;
	float: right;
}

button.delete:hover {
	transition: all 0.1s ease-in 0s;
	color: #F5B895;
}

.button.delete:after {
	animation: delete-transition-animation .6s cubic-bezier(.55,-0.04,.91,.94) forwards;
}

@keyframes delete-transition-animation {
	from {
		opacity: 1;
		transform: scale(1);
	}

	to {
		opacity: 0;
		transform: scale(0);
	}

}

.list-title {
	margin: 0 1em 0 0;
}

.task {
	position: relative;
	margin-bottom: 1.25em;
}

.task::after {
	content: "";
	position: absolute;
	right: 0;
	left: 0;
	bottom: -0.5em;
	background: currentColor;
	opacity: 0.4;
}

.task label::after {
	content: "";
	position: absolute;
	left: 0em;
	right: 0;
	height: 3px;
	background: currentColor;
	transform-origin: right;
	transform: scaleX(0);
	transition: transform 200ms ease-in-out;
}

ol {
	margin-left: 2em;
}

h2 {
	color: #F5B895;
	font-weight: 700;
	font-size: 40px;
	font-family: 'Lora', 'serif';
}

h3 {
	font-weight: 500;
	margin-bottom: 15px;
	margin-top: 15px;
}

.divSquare {
	width: 46%; 
	height: 200px;
	padding: 10px 15px;
	margin: -10px 5px;
	margin-top: 20px;
	margin-bottom: 20px;
	border: none;
	float: left;
	font-family: 'Lora', 'serif';
	color:#363838;
	font-weight: 700;
	font-size: 28px;
	background-color:#DDDDDD;
}

.nav { 
	grid-area: nav;
	position: fixed;
	z-index: 10;
	left: 0;
	right: 0;
	top: 0;
	height: 100px;
  font-family: 'Lora', serif;
	background-color: #0F4C81;
	display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 5%;
}

.aside { 
	grid-area: aside;
	width: 40%;
	float: left;
	padding: 2em 0em;
	font-family: 'Lora', serif;
	background-color: #ececec;
	position: relative;
}

/* Pomodoro Page */

p {
	font-size: 1.5em;
}

.time-change {
	font-size: 2em;
}

.p-container {
  position: relative;
  margin-top: 75px;
}

