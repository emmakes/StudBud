	color: #363838;
	font-family: 'Lora', serif;
	font-weight: 700;
	text-align: center;
}

.btn-settings {
  margin: 10px;
	border: none;
  padding: 2px 5px;
  min-width: 90px;
  color: #F5B895;
  font-size: 4em;
  cursor:pointer;
	text-align: center;
}

.settings {
  margin: auto;
  width: 75%;
	text-align: center;
}

#work, #break {
  color: #4e4e5b;
  font-weight: bold;
}

#work p, #break p {
  color: #363838;
  background: #B5C7D3;
  padding: 15px;
}

.footer {
  padding: 20px 0;
  color: #4e4e5b;
}

