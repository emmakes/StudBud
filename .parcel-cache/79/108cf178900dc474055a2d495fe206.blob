@import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;500;700&display=swap');

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto 1fr auto;
  gap: 3em 2em;
	grid-template-areas:
    "nav nav nav"
    "aside content content"
    "footer footer footer";
}

.nav { 
	grid-area: nav;
	position: fixed;
	z-index: 10;
	left: 0;
	right: 0;
	top: 0;
	height: 100px;
  font-family: 'Lora', serif;
	background-color: #0F4C81;
	display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 5%;
}

.aside { 
	grid-area: aside;
	width: 40%;
	float: left;
	padding: 2em 0em;
	font-family: 'Lora', serif;
	background-color: #ececec;
	position: relative;
}

.sub_nav_links {
	margin: 0;
	display: flex;
	flex-direction: column;
	font-size: 40px;
	list-style-type: none;
	align-items: center;
	font-size: 3vw;
}

.sub_nav_item a {
	color: #F5B895;
	text-decoration: none;
	height: 135px;
	display: block;
	align-items: center;
}

.sub_nav_links li a:hover {
  text-decoration: underline #B5C7D3 5px;
	text-underline-offset: 10px;
}

.sub_nav_links li a.active {
  font-weight: 700;
	text-decoration: underline #B5C7D3 5px;
	text-underline-offset: 10px;
}

hr.solid {
	border-left: 4px solid rgba(0, 0, 0, 0.627);
  height: 100%;
	position: absolute;
	top: 10px;
	left: 100%;
}

.page-container {
	margin: 2em;
}

#Tasks {
	text-align: center;
}

.page-container:not(#Tasks) {
	display: none;
}

#Pomodoro { 
	grid-area: content;
 	background-color: #ececec;
	text-align: center;
	padding: 2em;
	width: 100%;
	max-width: 100%;
	justify-content: space-around;
	font-weight: 600;
}

.footer { 
	grid-area: footer; 
}

.logo {
  cursor: pointer;
}

.app-container {
  background-color: #ececec;
  padding: 0;
  margin: 0;
}

.container {
  position: relative;
  margin-top: 100px;
}

.logo {
	float: left;
	width: 40%;
	height: 100%;
	display: flex;
	align-items: center;
	font-size: 30px;
	color: #ececec;
}

.nav .nav_links {
	float: right;
	padding: 0;
	margin: 0;
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.nav .nav_links li {
	list-style: none;
}

.nav .nav_links li a:hover {
  color: #B5C7D3;
}

.nav .nav_links li a.active {
	text-decoration: underline #F5B895 4px;
	text-underline-offset: 4px;
}

.pomodoro_buttons {
	font-size: 4vw;
	padding: 15px 32px;
	border: none;
	color: #363838;
	font-weight: 500;
	background-color: #B5C7D3;
	font-family: 'Lora', serif;
	text-align: center;
}

.stopwatch_buttons {
	font-size: 4vw;
	padding: 15px 32px;
	border: none;
	color: #363838;
	position: relative;
	display: in-line-block;
	font-weight: 500;
	background-color: #B5C7D3;
	font-family: 'Lora', serif;
	margin-left: 2em;
	margin-right: 2em;
	margin-top: 0.5em;
	text-align: center;
}

#time {
	font-size:10vw;
	padding-bottom: 0.2em;
	color: #363838;
	font-family: 'Lora', serif;
}

#stopwatchDisplay {
	font-size: 10vw;
	padding-bottom: 0.2em;
	color: #363838;
	font-family: 'Lora', serif;
	text-align: center;
	font-weight: 600;
}

.nav .nav_links a {
	display: block;
	padding: 1em;
  font-family: 'Lora', serif;
  font-weight: 500;
  font-size: 20px;
	color: #ececec;
	text-decoration: none;
  transition: all 0.2s ease 0s;
}

#nav-toggle {
	position: absolute;
	top: -100px;
}

.icon-burger {
	display: none;
	position: absolute;
	right: 5%;
	top: 50%;
	transform: translateY(-50%);
}

.line {
	width: 30px;
	height: 5px;
	background-color: #ececec;
	margin: 5px;
	border-radius: 3px;
	transition: all .3s ease-in-out;
}

@media screen and (max-width: 860px) {
	.nav .logo {
		float: none;
		width: 100%;
		justify-content: center;
	}
	.nav .nav_links {
		float: none;
		position: fixed;
		z-index: 9;
		left: 0;
		right: 0;
		top: 100px;
		bottom: 100%;
		flex-direction: column;
		justify-content: space-evenly;
		background-color: rgba(0,0,0,.8);
		overflow: hidden;
		box-sizing: border-box;
		transition: all .5s ease-in-out;
	}
	.nav .nav_links a {
		font-size: 20px;
	}
	.nav :checked ~ .nav_links {
		bottom: 0;
	}
	.nav .icon-burger {
		display: block;
	}
	hr.solid {
		display: none;
	}
	
	.sub_nav_item a {
		height: 115px;
	}
	.sub_nav {
		flex-direction: row;
		font-family: 'Lora', serif;
		background-color: #ececec;
	}
}